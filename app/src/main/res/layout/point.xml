<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bottomborder"
    android:elevation="2dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="50"
        android:gravity="center_vertical"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:padding="10sp">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/pointSystemPlayerType"
        android:layout_width="10dp"
        android:layout_height="25dp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:src="@drawable/batsman"
        android:layout_weight="2"
        android:textSize="10dp"
        android:padding="2sp"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/pointSystemPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mohit Chawla"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:ellipsize="marquee"
        android:layout_weight="20"
        android:textSize="12dp"
        android:padding="2sp"
    />



    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/pointSystemRuns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:background="@drawable/rightborder"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:ellipsize="end"
        android:layout_weight="8"
        android:textSize="10dp"
        android:padding="2sp"
        />




    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/pointSystemBattingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_on"
        android:gravity="center_horizontal"
        android:background="@drawable/rightborder"
        android:textColor="@color/colorPrimaryDark"
        android:ellipsize="end"
        android:layout_weight="1"
        android:textSize="10dp"
        android:padding="2sp"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/pointSystemWicketsTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:gravity="center_horizontal"
        android:background="@drawable/rightborder"
        android:textColor="@color/colorPrimaryDark"
        android:ellipsize="end"
        android:layout_weight="8"
        android:textSize="10dp"
        android:padding="2sp"
        />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/pointSystemBowlingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_off"
        android:gravity="center_horizontal"
        android:background="@drawable/rightborder"
        android:textColor="@color/colorPrimaryDark"
        android:ellipsize="end"
        android:layout_weight="1"
        android:textSize="10dp"
        android:padding="2sp"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/pointSystemPointsEarned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34.56"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:ellipsize="end"
        android:layout_weight="10"
        android:textSize="14dp"
        android:padding="2sp"
        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:gravity="center_vertical"
        android:elevation="2dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:padding="10sp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balls Faced"
            android:gravity="center_horizontal"
            android:background="@drawable/rightborder"
            android:textColor="@color/colorPrimaryDark"
            android:ellipsize="end"
            android:layout_weight="25"
            android:textSize="10dp"
            android:padding="2sp"
        />

        <android.support.v7.widget.AppCompatTextView
        android:id="@+id/pointSystemBallsFaced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:gravity="center_horizontal"
        android:background="@drawable/rightborder"
        android:textColor="@color/colorPrimaryDark"
        android:ellipsize="end"
        android:layout_weight="25"
        android:textSize="10dp"
        android:padding="2sp"
        />


    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overs Bowled"
        android:gravity="center_horizontal"
        android:background="@drawable/rightborder"
        android:textColor="@color/colorPrimaryDark"
        android:ellipsize="end"
        android:layout_weight="25"
        android:textSize="10dp"
        android:padding="2sp"
        />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/pointSystemOversBowled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:gravity="center_horizontal"
            android:background="@drawable/rightborder"
            android:textColor="@color/colorPrimaryDark"
            android:ellipsize="end"
            android:layout_weight="25"
            android:textSize="10dp"
            android:padding="2sp"
            />

    </LinearLayout>
</LinearLayout>