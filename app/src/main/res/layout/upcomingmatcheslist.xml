<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomborder"
    android:elevation="2dp"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    >

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/upcomingMatchesCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WI-W vs AU-W ODI-3rd ODI"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:gravity="center_vertical"
        >
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/upcomingMatchesTeamName1Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/india"
            android:layout_weight="2"
            android:padding="10dp"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/upcomingMatchesTeamName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WI-W"
            android:layout_weight="1"
            style="@style/TextAppearance.AppCompat.Button"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/upcomingMatchesMatchTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h 04m left"
            style="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/red"
            android:layout_weight="4"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/upcomingMatchesTeamName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AU-W"
            android:layout_weight="1"
            style="@style/TextAppearance.AppCompat.Button"
            />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/upcomingMatchesTeamName2Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/australia"
            android:layout_weight="2"
            android:padding="10dp"
        />
    </LinearLayout>
</LinearLayout>