<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/vlightgrey"
android:orientation="horizontal"
android:weightSum="50"
android:layout_marginLeft="10sp"
android:layout_marginTop="10dp"
android:elevation="2dp"
android:gravity="center_vertical"
android:layout_marginRight="10sp"
    >

<android.support.v7.widget.AppCompatImageView
    android:id="@+id/playerType"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/batsman"
    android:padding="13dp"
    android:layout_weight="5"
    />

<android.support.v7.widget.AppCompatTextView
    android:id="@+id/playerSelectionPlayerName"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:text="James Anderson"
    android:textStyle="bold"
    android:textColor="@color/blue"
    android:layout_weight="30"
    android:textSize="15dp"
    style="@style/TextAppearance.AppCompat.Headline"
    />

<android.support.v7.widget.AppCompatTextView
    android:id="@+id/playerSelectionPlayerCredit"
    android:layout_width="25dp"
    android:layout_height="wrap_content"
    android:text="5.5"
    android:fontFamily="monospace"
    android:textColor="@color/colorPrimary"
    android:textSize="10dp"
    android:textStyle="bold"
    android:background="@drawable/allsideborder"
    android:layout_weight="8"
    android:gravity="center"
    style="@style/TextAppearance.AppCompat.Caption"
    />




<android.support.v7.widget.AppCompatCheckBox
    android:id="@+id/playerSelectionCheckBox"
    android:layout_width="25dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_weight="7"
    style="@style/Widget.AppCompat.CompoundButton.CheckBox"
    />

</LinearLayout>