<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".Activity.PointChangeScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.000"
        tools:layout_editor_absoluteX="0dp">

        <android.support.v7.widget.AppCompatImageButton
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            android:onClick="pointsGoBack"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points"
            android:layout_weight="98"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <android.support.v7.widget.AppCompatImageButton
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_attach_money_white_24dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:weightSum="50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:padding="2sp"
            android:text="Player name"
            android:textColor="@color/white"
            android:textSize="15dp" />


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:padding="2sp"
            android:text="Runs"
            android:textColor="@color/white"
            android:textSize="10dp" />


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:padding="2sp"
            android:text="Overs"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:padding="2sp"
            android:text="Status"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:padding="2sp"
            android:text="Wickets"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:padding="2sp"
            android:text="Overs"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:padding="2sp"
            android:text="Status"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:padding="2sp"
            android:text="Points"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/totalPointsEarned"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="right"
        android:layout_marginTop="5sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginRight="21sp"
        android:text="30.45"
        />
    <ListView
        android:id="@+id/pointSystemList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="90"
        />


</LinearLayout>